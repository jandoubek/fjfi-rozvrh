@model Rozvrh.Models.Model
@{
    ViewBag.Title = "Úvodní stránka";
}

<div id="error" class="ui-state-error import-error"></div>

@section right{
    
    <div id="tabs">
        <ul>
            <li><a href="#tabs-1">Výběr</a></li>
            <li><a href="#tabs-2">Export</a></li>
            <li><a href="#tabs-3">Import</a></li>
        </ul>
        <div id="tabs-1">@{Html.RenderPartial("Vyber");}</div>
        <div id="tabs-2">@{Html.RenderPartial("Export");}</div>
        <div id="tabs-3">@{Html.RenderPartial("Import");}</div>
    </div>
}

@section scripts{
    <script>
        $(function () {

            function fadecallback() {
                setTimeout(function () {
                    $("#error:visible").removeAttr("style").fadeOut();
                }, 5000);
            };
            $("#tabs").tabs();
            @if (Model.ImportErrorMessage != "")
            { 
                @:$("#error").text("@Html.Raw(Model.ImportErrorMessage)");
                @:$("#error").show("Blind",500,fadecallback);

                
            }
            else
            {
                 @:$("#error").hide();
            }
            
        });
    </script>
}
<div id="Timetable">@Html.Partial("Rozvrh")</div><br/>
<div id="Fltr">@Html.Partial("VyfiltrovaneLekce")</div>
