@model Rozvrh.Models.Model

@using (Ajax.BeginForm("Filter", "Home", new AjaxOptions
{
    HttpMethod = "Get",
    UpdateTargetId = "tabs-1",
    InsertionMode = System.Web.Mvc.Ajax.InsertionMode.Replace
}))
{

    <div class="boxContainer">
        <div class="box">
            @Html.Label("degreeYear", "Ročník")
            @Html.DropDownList("degreeYear", new SelectList(Model.DegreeYears,"id","acronym"), new { size = "8", onchange = "$(this.form).submit()" })
        </div>
        <div class="box">
            @Html.Label("specialization", "Zaměření")
            @Html.DropDownList("specialization", new SelectList(Model.Specializations,"id","acronym"), new { size = "8", onchange = "$(this.form).submit()" })
        </div>
        <div class="box">
            @Html.Label("groups", "Kruh")
            @Html.DropDownList("groups", new SelectList(Model.Groups,"id","cisloKruhu"), new { size = "8", onchange = "$(this.form).submit()" })
        </div>
    </div>
    <div class="boxContainer nomargin">
        <div class="box">
            @Html.Label("department", "Katedra")
            @Html.DropDownList("department", new SelectList(Model.Departments,"id","acronym"), new { size = "8", onchange = "$(this.form).submit()" })
        </div>
        <div class="box">
            @Html.Label("lecturer", "Vyučující")
            @Html.DropDownList("lecturer", new SelectList(Model.Lecturers,"id","name"), new { size = "8", onchange = "$(this.form).submit()" })
        </div>
    </div><div class="clear"></div><br/><br/>
    <div class="boxContainer">
        <div class="box">
            @Html.Label("building", "Budova")
            @Html.DropDownList("building", new SelectList(Model.Buildings,"id","name"), new { size = "8", onchange = "$(this.form).submit()" })
        </div>
        <div class="box">
            @Html.Label("classroom", "Místnost")
            @Html.DropDownList("classroom", new SelectList(Model.Classrooms,"id","name"), new { size = "8", onchange = "$(this.form).submit()" })
        </div>
    </div>
    <div class="boxContainer">
        <div class="box">
            @Html.Label("day", "Den")
            @Html.DropDownList("day", new SelectList(Model.Days,"id","name"), new { size = "8", onchange = "$(this.form).submit()" })
        </div>
    </div>
    <div class="boxContainer">
        <div class="box">
            @Html.Label("time", "Začátek")
            @Html.DropDownList("time", new SelectList(Model.Times,"id","hours"), new { size = "8", onchange = "$(this.form).submit()" })
        </div>
    </div><div class="clear"></div>
    <br />
}<br />
<div id="Fltr">@Html.Partial("VyfiltrovaneLekce")</div>
<br />
@Ajax.ActionLink("Vybrat vše", "Show", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "leftSection" })
