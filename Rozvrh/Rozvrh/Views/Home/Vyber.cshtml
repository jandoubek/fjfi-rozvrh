@model Rozvrh.Models.Model

<script>
    jQuery.ajaxSettings.traditional = true;

    function filterAll() {
        $.post('@Url.Action("FilterAll", "Home")', {
            groups: $('#SelectedGroups').val(), departments: $('#SelectedDepartments').val(), lecturers: $('#SelectedLecturers').val(),
            classrooms: $('#SelectedClassrooms').val(), days: $('#SelectedDays').val(), times: $('#SelectedTimes').val()},function(data) {
                $('#Fltr').html(data);
            });
    }

    $("select").on('change', function () { window.filterAll(); });

    $("#clearAll").click(function () { $("select option").prop("selected", false); });

</script>

@using (Ajax.BeginForm("Filter", "Home", new AjaxOptions
{
    HttpMethod = "Get",
